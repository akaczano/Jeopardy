<script>

    function showAnswer(i) {
        document.getElementById("answer" + i).style.display = "";
        document.getElementById("show-answer" + i).style.display = "none";
    }


</script>

@{

    int i = 0;
}
@foreach (var q in Model.Questions)
{
<div class="row">
    <div align="center" class="container">
        <div class="col-sm-7 col-sm-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"> @q.category.title <span class="badge badge-success">$@q.value</span></h3>
                </div>
                <div class="panel-body">
                    <p><strong>Question:</strong> @q.question </p>
                    <hr />

                    <p>
                        <strong>Answer: </strong>
                        <a onclick="showAnswer(@(++i))" class="btn btn-sm btn-default" id="show-answer@(i)">Show</a>
                        <span id="answer@(i)" style="display: none"> @q.answer </span>
                    </p>
                    <small class="pull-right"><em>Airdate: @q.airdate </em></small>
                </div>
            </div>

        </div>
    </div>
</div>

}




