@page
@model IndexModel

@{
    ViewData["Title"] = "Home page";

}
<head>

    <link rel="stylesheet" href="~/css/card.css" />

</head>


<h2>Find Questions</h2>


<div class="row">
    <div class="container-fluid">
        <form method="post">

            <div class="row">
                <div class="form-group col-sm-4">
                    <label asp-for="SearchString">Category</label>
                    <input class="form-control" type="search" asp-for="SearchString" />
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-2">
                    <label asp-for="MinDate">Min date</label>

                    <input class="form-control" asp-for="MinDate" type="date" value="yyyy-mm-dd" />

                </div>
                <div class="form-group col-sm-2">
                    <label asp-for="MaxDate">Max date</label>
                    <input class="form-control" asp-for="MaxDate" type="date" value="yyyy-mm-dd" />
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-4">
                    <label asp-for="Value">Value ($)</label>
                    <select class="form-control" asp-for="Value" asp-items="Model.VALUES"></select>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-4">
                    <input type="submit" value="Find Questions" />
                </div>
            </div>

        </form>
    </div>
</div>

<script>

    function showAnswer() {
        document.getElementById(id).innerHTML = "Answer: " + answer;
    }
</script>

