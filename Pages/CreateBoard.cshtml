@model TestProject.Pages.GameBoardModel
@{
    ViewData["Title"] = "CreateBoard";
}

<h1>Create new game</h1>

<form method="post" asp-page="/GameBoard">
    <label class="col-sm-3" asp-for="ColumnCount">Categories</label>
    <input class="col-sm-1" asp-for="ColumnCount" value="5"/><br>
    <label class="col-sm-3" asp-for="RowCount">Questions per Category</label>
    <input class="col-sm-1" asp-for="RowCount" value="5"/><br><br>
    <input class="col-sm-2" type="submit" value="Start Game"/>
</form>

